<Window x:Class="Civil3DWeedLines.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Civil3DWeedLines.Views"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"     
             mc:Ignorable="d" 
             Width="300"    
             SizeToContent="Height"
             Title="Lines weeding">
    <StackPanel>

        <Label Content="Tolerance"
         Margin="2"/>
        <TextBox Text="{Binding ToleranceValue}"
           Margin="2"/>

        <Label Content="Delta angle"
               Margin="2"/>
        <TextBox Text="{Binding DeltaAngleValue}"
                 Margin="2"/>

        <Label Content="Distance"
               Margin="2"/>
        <TextBox Text="{Binding DistanceValue}"
                 Margin="2"/>

        <Button Content="{Binding SelectLinesInfo}"
                Command="{Binding SelectLinesCommand}"
                Margin="2"/>
    </StackPanel>
</Window>
